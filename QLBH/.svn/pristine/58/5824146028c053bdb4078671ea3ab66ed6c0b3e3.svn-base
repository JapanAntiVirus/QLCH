using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace QuanLyCuaHang
{
    public class HoaDon
    {
        public String MaSanPham { get; set; }
        public String TenSanPham { get; set; }
        public int SoLuong { get; set; }
        public String DonViTinh { get; set; }
        public int DonGia { get; set; }
        public int ThanhTien { get; set; }
        
        public HoaDon() { }
        public HoaDon(string msp,string tensp,int soluong,string donvi, int dongia, int thanhtien)
        {
            MaSanPham = msp;
            TenSanPham = tensp;
            SoLuong = soluong;
            DonViTinh = donvi;
            DonGia = dongia;
            ThanhTien = thanhtien;
        }
        public HoaDon(HoaDon h)
        {
            MaSanPham = h.MaSanPham;
            TenSanPham = h.TenSanPham;
            SoLuong = h.SoLuong;
            DonViTinh = h.DonViTinh;
            DonGia = h.DonGia;
            ThanhTien = h.ThanhTien;
        }
    }
}
